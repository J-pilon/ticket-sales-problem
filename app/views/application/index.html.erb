<div class="w-full max-w-2xl mx-auto text-center">
  <h1 class="text-3xl font-bold mb-4">Welcome</h1>
  <% if current_user %>
    <p class="text-gray-600">You are signed in as <%= current_user.email %></p>
    <%= button_to 'Sign Out', sign_out_path, method: :delete, class: "mt-4 inline-block text-blue-600 hover:text-blue-700" %>
  <% else %>
    <div class="space-x-4">
      <%= link_to "Sign In", sign_in_path, class: "inline-block bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700" %>
      <%= link_to "Register", register_path, class: "inline-block bg-gray-600 text-white py-2 px-4 rounded-md hover:bg-gray-700" %>
    </div>
  <% end %>
</div>

