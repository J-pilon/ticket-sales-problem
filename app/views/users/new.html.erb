<div class="w-full max-w-md mx-auto">
  <h1 class="text-2xl font-bold mb-6">Register</h1>

  <%= form_with model: @user, url: register_path, local: true, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :email, class: "block text-sm font-medium mb-1" %>
      <%= form.email_field :email, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :password, class: "block text-sm font-medium mb-1" %>
      <%= form.password_field :password, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :password_confirmation, "Password Confirmation", class: "block text-sm font-medium mb-1" %>
      <%= form.password_field :password_confirmation, required: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.submit "Register", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "Already have an account? Sign in", sign_in_path, class: "text-blue-600 hover:text-blue-700" %>
  </div>
</div>

